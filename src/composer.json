{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/dbal": "^3.10.2",
        "doctrine/doctrine-bundle": "^2.16.2",
        "doctrine/doctrine-migrations-bundle": "^3.4.2",
        "doctrine/orm": "^3.5.2",
        "dragonmantank/cron-expression": "^3.4",
        "symfony/console": "7.3.*",
        "symfony/dotenv": "7.3.*",
        "symfony/framework-bundle": "7.3.*",
        "symfony/http-client": "7.3.*",
        "symfony/messenger": "7.3.*",
        "symfony/monolog-bundle": "^3.10",
        "symfony/runtime": "^7.3",
        "symfony/scheduler": "7.3.*",
        "symfony/validator": "7.3.*",
        "symfony/yaml": "7.3.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.88",
        "phpstan/phpstan": "^2.1.29",
        "phpstan/phpstan-strict-rules": "^2.0.6",
        "squizlabs/php_codesniffer": "^4.0",
        "symfony/maker-bundle": "^1.64"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/runtime": true
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "bump-after-update": true,
        "apcu-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "php bin/console cache:clear"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "phpstan": "vendor/bin/phpstan analyse --configuration=phpstan.neon --memory-limit 1G",
        "phpcs": "vendor/bin/phpcs --standard=.phpcs.xml -n",
        "phpcsf": "timeout 1800 vendor/bin/phpcbf --standard=.phpcs.xml",
        "php-cs-fixer": "PHP_CS_FIXER_IGNORE_ENV=true vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "fix": [
            "@php-cs-fixer",
            "@phpcsf"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.3.*"
        }
    }
}
